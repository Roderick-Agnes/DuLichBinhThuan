@using DulichBinhThuan.Models;
@{
    Layout = null;
}
@helper ConvertDate(DateTime str)
{
    @str.ToString("dd/MM/yyyy");
}
@helper Truncate(String str, int len)
{
    if (str.Length > len)
    {
        @str.Substring(0, len) <text> ... </text>

    }
    else
    {
        @str
    }
}
@if(ViewBag.ErrorCode == "1") { 
    <div class="recent-block">
        <p>
            Đang cập nhật bài viết mới...
        </p>
    </div>
}
@foreach (var item in Model)
{
    <div class="recent-block">
        <div class="recent-img">
            <a href="@Url.Action("BlogDetail", "Blog", new { id = item.MaBlog })"><img src="~/Assets/images/recent-post-1.jpg" class="img-reponsive" alt="recent-blog-image" /></a>
        </div><!-- end recent-img -->

        <div class="recent-text">
            <a href="@Url.Action("BlogDetail", "Blog", new { id = item.MaBlog })"><h5>@Truncate(item.TieuDe, 35)</h5></a>
            <span class="date">@ConvertDate(Convert.ToDateTime(item.NgayTao))</span>
        </div><!-- end recent-text -->
    </div><!-- end recent-block -->
}

