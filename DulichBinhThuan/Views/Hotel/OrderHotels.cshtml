@using DulichBinhThuan.Models;
@{
    Layout = null;
}
<div class="list-block main-block room-block">
    <div class="list-content">
        <div class="main-img list-img room-img">
            <a href="@Url.Action("HotelDetail", "Hotel", new { id = Convert.ToInt32(Model.MaHotel)})">
                <img src="https://cf.bstatic.com/xdata/images/hotel/max1280x900/309603550.jpg?k=368bfac81990dfbe3306a7d2cb583c8007eb438c3f882c85f297e6667658c4f4&o=&hp=1" class="img-responsive" alt="room-img" />
            </a>
            <div class="main-mask">
                <ul class="list-unstyled list-inline offer-price-1">
                    <li class="price">
                        @string.Format("{0:#,0}", Model.Gia) VNĐ<span class="divider">|</span>
                        @if (Model.SoNgay != 0 && Model.SoDem != 0)
                        {
                            <span class="pkg">
                                @Model.SoNgay Ngày @Model.SoDem Đêm
                            </span>
                        }
                        else if (Model.SoNgay == 0 && Model.SoDem != 0)
                        {
                            <span class="pkg">
                                @Model.SoDem Đêm
                            </span>
                        }
                        else
                        {
                            <span class="pkg">
                                @Model.SoNgay Ngày
                            </span>
                        }
                    </li>
                    <li class="rating">
                        <span><i class="fa fa-star orange"></i></span>
                        <span><i class="fa fa-star orange"></i></span>
                        <span><i class="fa fa-star orange"></i></span>

                    </li>
                </ul>
            </div><!-- end main-mask -->
        </div><!-- end room-img -->

        <div class="list-info room-info">
            <h3 class="block-title"><a href="@Url.Action("HotelDetail", "Hotel", new { id = Convert.ToInt32(Model.MaHotel)})"> @Model.TenHotel</a></h3>
            <p class="block-minor">      <span><i class="fa fa-location-arrow"></i></span>@Model.DiaChi</p>
            <p>@Model.DiemNoiBat</p>
            <a href="@Url.Action("HotelDetail", "Hotel", new { id = Convert.ToInt32(Model.MaHotel)})" class="btn btn-orange btn-lg">Xem Chi Tiết</a>
        </div><!-- end room-info -->
    </div><!-- end list-content -->
</div><!-- end room-block -->